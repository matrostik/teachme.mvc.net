@model TeachMe.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "שחזור סיסמא";
}
<div class="breadcrumbs">
    <div class="container">
        <h2 class="pull-right"><i class="fa fa-bolt color-green"></i> &nbsp;@ViewBag.Title</h2>
    </div><!--/container-->
</div>
<div class="container content">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "reg-page", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="reg-header">
                    <h2>יש להזין את כתובת הדוא&quotל איתה נרשמת לאתר ונשלח אליך קישור לשחזור הסיסמא</h2>
                </div>
                @Html.ValidationSummary(true)
                <div class="margin-bottom-20">
                    <div class="input-group" dir="ltr">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "דוא\"ל", @dir = "rtl" })
                        <span class="input-group-addon">@Html.Label("@")</span>
                    </div>
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <button type="submit" class="btn-u pull-left">
                            <span class="glyphicon glyphicon-envelope"></span>&nbsp;&nbsp;המשך
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>