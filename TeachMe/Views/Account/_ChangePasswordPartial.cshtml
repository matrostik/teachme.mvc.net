@using Microsoft.AspNet.Identity
@model TeachMe.Models.ManageUserViewModel

<p>אתה מחובר כ <strong>@User.FullName() (@User.Identity.Name)</strong></p>
<div class="row">
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
        @using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "reg-page", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="reg-header">
                <h2>טופס שינוי סיסמא</h2>
            </div>
            @Html.ValidationSummary(true)
            <span class="color-red">*</span> @Html.LabelFor(m => m.OldPassword)
            <div class="margin-bottom-20">
                <div class="input-group" dir="ltr">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @dir = "rtl" })
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                </div>
                @Html.ValidationMessageFor(m => m.OldPassword)
            </div>
            <span class="color-red">*</span> @Html.LabelFor(m => m.NewPassword)
            <div class="margin-bottom-20">
                <div class="input-group" dir="ltr">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @dir = "rtl" })
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                </div>
                @Html.ValidationMessageFor(m => m.NewPassword)
            </div>
            <span class="color-red">*</span> @Html.LabelFor(m => m.ConfirmPassword)
            <div class="margin-bottom-20">
                <div class="input-group" dir="ltr">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @dir = "rtl" })
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                </div>
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>

            <div class="row">
                <div class="col-lg-6 text-left">
                    <button type="submit" class="btn-u">
                        <span class="glyphicon glyphicon-floppy-save"></span>&nbsp;&nbsp;שנה סיסמא
                    </button>
                </div>
            </div>
        }
    </div>
</div>