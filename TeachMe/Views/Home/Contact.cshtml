@model TeachMe.Models.MailModel
@{
    ViewBag.Title = "כתבו אלינו";
}

<h2>@ViewBag.Title</h2>
<h3>TeachMe יצירת קשר</h3>

<div class="row">
    <div class="col-md-10">
        <center>
            <script type="text/javascript" language="javascript" src="http://live.sekindo.com/live/liveView.php?s=51788&subId=DEFAULT"></script>
        </center>
    </div>
    <div class="col-md-2">
        <address>
            <strong>קוד מקור:</strong>   <a href="https://github.com/matrostik/teachme.mvc.net">GitHub</a><br />
            <strong>תמיכה:</strong>   <a href="https://github.com/matrostik/teachme.mvc.net/issues">Issues tracker</a><br />
            <strong>עזרה:</strong> <a href="https://github.com/matrostik/teachme.mvc.net/wiki">Wiki</a>
        </address>
    </div>
    
</div>

<fieldset>
    <legend>
        טופס יצירת קשר
    </legend>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <p>
            דואר אלקטרוני (חובה):
            @Html.TextBoxFor(m => m.From, new { @class = "form-control", @id = "inputDefault" })
            @Html.ValidationMessageFor(model => model.From)
        </p>
        @*<p>
                To:
                @Html.TextBoxFor(m => m.To, new { @class = "form-control", @id = "inputDefault" })
            </p>*@
        <p>
            נושא (חובה):
            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", @id = "inputDefault" })
            @Html.ValidationMessageFor(model => model.Subject)
        </p>
        <p>
            תוכן ההודעה (חובה):
            @Html.TextAreaFor(m => m.Body, new { @class = "form-control", @rows = "5", @id = "inputDefault" })
            @Html.ValidationMessageFor(model => model.Body)
        </p>
        <button type="submit" class="btn btn-default">
            <span class="glyphicon glyphicon-envelope"></span>&nbsp;&nbsp;שלח
        </button>
        <span class="label label-info">@ViewBag.Result</span>
    }
</fieldset>