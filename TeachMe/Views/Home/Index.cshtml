@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div class="row">
        <div class="col-md-4" style="border:double; border-color:white">
            <h1>TeachMe</h1>
            <p class="lead"><img src="/Images/teachme.jpg" width="185" height="185" /></p>
        </div>

        <div class="col-md-8" style="border:double; border-color:white">
            @using (Html.BeginForm("Index", "Search", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <p>
                    תחום הלימוד: @Html.DropDownList("category", (List<SelectListItem>)@ViewBag.Cats, "בחר תחום", new { @class = "form-control" })
                </p>
                <p>
                    עיר: @Html.DropDownList("city", (List<SelectListItem>)@ViewBag.Cities, "בחר עיר", new { @class = "form-control" })
                </p>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="חפש" />
                    </div>
                </div>
            }
            @using (Html.BeginForm("Index", "Search", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <p>
                    @Html.Label("firstName", "שם פרטי")
                    @Html.TextBox("firstName", "", new { @class = "form-control", @id = "inputDefault" })
                </p>
                <p>
                    @Html.Label("lastName", "שם משפחה")
                    @Html.TextBox("lastName", "", new { @class = "form-control", @id = "inputDefault" })
                </p>
                <p>
                    
                </p>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="חפש" />
                    </div>
                </div>
            }
        </div>

    </div>
    <p class="lead">
        TeachMe is a platform for everyone who is looking for a private teacher or wants to advertise himself as a teacher.
    </p>
    <p><a href="https://github.com/matrostik/teachme.mvc.net/wiki" class="btn btn-primary btn-large">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Source code</h2>
        <p>
            This project is a part of software engineering studies in Azrieli College of Engineereng.
        </p>
        <p><a class="btn btn-default" href="https://github.com/matrostik/teachme.mvc.net">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Our team</h2>
        <p>We are dev ninjas.</p>
        <br>
        <p><a class="btn btn-default" href="https://github.com/matrostik/teachme.mvc.net/wiki/Team">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Contact us</h2>
        <p>Share your wishes.</p>
        <br>
        <p><a class="btn btn-default" href="/Home/Contact">Learn more &raquo;</a></p>
    </div>
